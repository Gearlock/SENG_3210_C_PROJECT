<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/votingPage"
        android:layout_width="168dp"
        android:layout_height="137dp"
        android:backgroundTint="#4772E4"
        android:text="Voting Page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118"
        android:onClick="IntentVotingForTopic"/>

    <Button
        android:id="@+id/editUserDetails"
        android:layout_width="155dp"
        android:layout_height="137dp"
        android:backgroundTint="#4772E4"
        android:text="Edit User Details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118"
        android:onClick="IntentVoterRegistration"/>

    <Button
        android:id="@+id/results"
        android:layout_width="167dp"
        android:layout_height="143dp"
        android:backgroundTint="#4772E4"
        android:text="Results"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.403"
        android:onClick="IntentVoterResults"/>

    <Button
        android:id="@+id/logout"
        android:layout_width="156dp"
        android:layout_height="141dp"
        android:backgroundTint="#EF3D3D"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.403"
        android:onClick="IntentLoginScreen"/>
</androidx.constraintlayout.widget.ConstraintLayout>